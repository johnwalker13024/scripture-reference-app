<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.johnathonwalker.myapplication.MainActivity">

    <TextView android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ether"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/chapter"
        android:layout_toStartOf="@+id/chapter"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <TextView android:id="@+id/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView android:id="@+id/verse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11-12"
        android:textSize="40dp"
        android:layout_alignTop="@+id/chapter"
        android:layout_toRightOf="@+id/chapter"
        android:layout_toEndOf="@+id/chapter"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <Button android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="30dp"
        android:layout_below="@+id/book"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:onClick="share"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:id="@+id/textView"
        android:layout_above="@+id/book"
        android:layout_alignLeft="@+id/book"
        android:layout_alignStart="@+id/book"
        android:layout_marginBottom="87dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verse"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/verse"
        android:layout_alignEnd="@+id/verse" />

</RelativeLayout>
